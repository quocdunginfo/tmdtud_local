<html lang="en"><!--<![endif]--><head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <base href="@qRootAdminTemplatePath" />
  <title>@ViewBag.Title</title>
  <link rel="stylesheet" href="css/style.css">
  <!--[if lt IE 9]><script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
</head>
<body>
  <form method="post" action="@Url.Action("Submit", "AdminForgotPassword")" class="login">
    <p>
      <label for="login" style="width:150px">Nhập email:</label>
      <input name="user_email" id="login" value="" type="text">
    </p>

    <p class="login-submit">
      <button type="submit" class="login-button">Khôi phục mật khẩu</button>
    </p>
    <p class="forgot-password"><a href="@Url.Action("Index","Admin")">Quay lại trang đăng nhập</a></p>
  </form>
</body>

</html>