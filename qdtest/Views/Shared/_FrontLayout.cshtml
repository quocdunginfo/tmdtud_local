<script type="text/javascript" src="@Url.Content(_Template_Path+"/jquery-1-4-2.min.js")"></script> 
<link rel="stylesheet" href="@Url.Content(_Template_Path+"css/slimbox2.css")" type="text/css" media="screen" /> 
<script type="text/JavaScript" src="@Url.Content(_Template_Path+"js/slimbox2.js")"></script> 
</head>

<body>

<div id="templatemo_body_wrapper">
<div id="templatemo_wrapper">

	<div id="templatemo_header">
    	<div id="site_title"><h1><a href="http://www.templatemo.com">Cửa hàng giày dép</a></h1></div>
        <div id="header_right">
        	<p>
	        <a href="#">Tài khoản của tôi</a> | <a href="#">Đăng kí</a> | <a href="#">Đăng nhập</a> | <a href="#">Giỏ hàng của tôi</a> | <a href="#">Thanh toán</a></p>
            <p>
            	Giỏ hàng: <strong>3 items</strong> ( <a href="shoppingcart.html">Xem giỏ hàng</a> )
			</p>
		</div>
        <div class="cleaner"></div>
    </div> <!-- END of templatemo_header -->
    
    <div id="templatemo_menubar">
    	<div id="top_nav" class="ddsmoothmenu">
            <ul>
                <li><a href="index.html" class="selected">Trang chủ</a></li>
                <li><a href="products.html">Sản phẩm</a>
                    <ul>
                         @{
                        for(int i=0;i<NhomSanPham2_List_All.Count;i++)
                        {
                            var item = NhomSanPham2_List_All[i];
                            String pre="";
                            for(int j=0;j<item.level;j++)
                            {
                                pre = "--" + pre;
                            }
                             <li><a href="@Url.Action("")">@pre @item.ten</a></li>
                        }
                         
                        }
                    	
                        @*<li><a href="http://www.templatemo.com/page/1">Nam</a></li>
                        <li><a href="http://www.templatemo.com/page/2">--Giày thể thao</a></li>
                        <li><a href="http://www.templatemo.com/page/3">--Giày sandals</a></li>
                        <li><a href="http://www.templatemo.com/page/4">Nữ</a></li>
                        <li><a href="http://www.templatemo.com/page/5">--Giày cao gót</a></li>
                        <li><a href="http://www.templatemo.com/page/5">--Giày thể thao</a></li>*@
                  </ul>
                </li>
                <li><a href="about.html">Giới thiệu</a>
               <!--     <ul>
                        <li><a href="http://www.templatemo.com/page/1">Sub menu 1</a></li>
                        <li><a href="http://www.templatemo.com/page/2">Sub menu 2</a></li>
                        <li><a href="http://www.templatemo.com/page/3">Sub menu 3</a></li>
                  </ul>-->
                </li>
                <li><a href="faqs.html">Tìm kiếm</a></li>
                <li><a href="checkout.html">Phản hồi</a></li>
                <li><a href="contact.html">Liên hệ</a></li>
            </ul>
            <br style="clear: left" />
        </div> <!-- end of ddsmoothmenu -->
        <div id="templatemo_search">
            <form action="@Url.Action("Submit","FrontTimKiem")" method="post">
              <input type="text" value="@timkiem_sanpham["ten"]" name="sanpham_ten" id="keyword" title="keyword" onfocus="clearText(this)" onblur="clearText(this)" class="txt_field" />
              <input type="hidden" value="@timkiem_sanpham["max_item_per_page"]" name="sanpham_max_item_per_page" />
              <input type="submit" name="Search" value="" alt="Search" id="searchbutton" title="Search" class="sub_btn"  />
            </form>
        </div>
    </div> <!-- END of templatemo_menubar -->
    
    <div id="templatemo_main">
    	<div id="sidebar" class="float_l">
        	<div class="sidebar_box"><span class="bottom"></span>
            	<h3>Danh mục sản phẩm</h3>   
                <div class="content"> 
                	<ul class="sidebar_list">
                        @{
                        for(int i=0;i<NhomSanPham2_List_All.Count;i++)
                        {
                            var item = NhomSanPham2_List_All[i];
                            String pre=">";
                            if (item.level == 0) { pre = ""; }
                            else if (item.level==1) {pre="->";}
                            else{
                            for(int j=0;j<item.level;j++)
                            {
                                pre = "--" + pre;
                            }}
                            if(i==0)
                            {
                           <li class="first"><a href="@Url.Action("")">@pre @item.ten</a></li>
                        }
                        else if(i==NhomSanPham2_List_All.Count-1)
                        {
                             <li class="last"><a href="@Url.Action("")">@pre @item.ten</a></li>
                        }
                        else{
                             <li><a href="@Url.Action("")">@pre @item.ten</a></li>
                        }
                        }
                         
                        }
                    	
                    </ul>
                </div>
            </div>
            <div class="sidebar_box"><span class="bottom"></span>
            	<h3><a class="sidebar_box_icon" href="http://fr.onlyimage.com" title="Cliquez ici"  ><img src="@Url.Content(_Template_Path+"images/templatemo_sidebar_header.png")" alt="Cliquez ici from fr.onlyimage.com" title="Cliquez ici" /></a>Sản phẩm bán chạy </h3>   
                <div class="content">
                    @{ 
                        foreach(var item in SanPham_BestSeller)
                        {
                	        <div class="bs_box">
                    	    <a href="@Url.Action("Index","FrontSanPhamDetail",new { id = item.id})"><img src="@Url.Content("~/_Upload/HinhAnh/"+item._get_hinhanh_macdinh().duongdan_thumb)" alt="image" style="max-width:60px; max-height:60px" /></a>
                            <h4><a href="@Url.Action("Index","FrontSanPhamDetail",new { id = item.id})">@item.ten</a></h4>
                            <p class="price">@item.gia đ</p>
                            <div class="cleaner"></div>
                            </div>
                        }
                    }
                    
                </div>
            </div>
        </div>
        @RenderBody()
        <div class="cleaner"></div>
    </div> <!-- END of templatemo_main -->
    
    <div id="templatemo_footer">
    	<p><a href="#">Trang chủ</a> | <a href="#">Sản phẩm</a> | <a href="#">Giới thiệu</a> | <a href="#">Tìm kiếm</a> | <a href="#">Phản hồi</a> | <a href="#">Liên hệ</a>
		</p>

