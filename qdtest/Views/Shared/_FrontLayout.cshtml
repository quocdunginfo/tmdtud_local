<link rel="stylesheet" href="@Url.Content(_Template_Path+"css/nivo-slider.css")" type="text/css" media="screen" />

<link rel="stylesheet" type="text/css" href="@Url.Content(_Template_Path+"css/ddsmoothmenu.css")" />

<script type="text/javascript" src="@Url.Content(_Template_Path+"js/jquery.min.js")"></script>
