@{
    ViewBag.Title = "Trang chủ - Khách hàng - Quên mật khẩu";
    var khachhang_264 = (qdtest.Models.KhachHang)ViewBag.khachhang_264;
}
<div id="content" class="float_r">
    <h2>Quên mật khẩu</h2>
    <div class="content_half float_l">
        <div id="contact_form" style="width:14px; font-size:14px;">
            <form method="post" name="contact" action="@Url.Action("Request_Password_Change_Submit", "FrontForgotPassword")">
                <input type="hidden" name="khachhang_id" class="input_field" value="@khachhang_264.id" />
                <input type="hidden" name="khachhang_session" class="input_field" value="@khachhang_264.forgot_password_session" />
                <label>Nhập mật khẩu mới:</label>
                <br />
                <input type="password" name="khachhang_matkhau" class="input_field" value="" />
                <br />
                <br />
                <input type="submit" class="submit_btn" value="Hoàn tất" />
            </form>
        </div>
    </div>
</div>